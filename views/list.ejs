<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Todo List</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div class="box">
        <h1>My Todo List</h1>
    </div>

    <div class="box">
        <!-- Existing tasks -->
        <% dayej.forEach(function(task) { %>
            <form action="/delete" method="POST" class="task-form">
                <div class="item">
                    <input type="checkbox" 
                           name="checkbox1" 
                           value="<%= task._id %>" 
                           onchange="this.form.submit()">
                    <p><%= task.name %></p>
                </div>
            </form>
        <% }) %>

        <!-- Add new task -->
        <form action="/" method="POST" onsubmit="return validateForm()" class="add-form">
            <input type="text" name="ele1" id="ele1" placeholder="Enter a new task...">
            <button type="submit">+</button>
        </form>
    </div>

    <script>
        function validateForm() {
            const value = document.getElementById("ele1").value.trim();
            if (!value) {
                alert("Please enter a task before submitting!");
                return false;
            }
            return true;
        }
    </script>
</body>

</html>
